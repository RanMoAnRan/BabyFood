{
  "id": "d5a8c77008ecb156d32497a8f71cf295",
  "title": "彩色酸奶冰棍",
  "min_age_month": 8,
  "tags": [
    "小吃",
    "水果",
    "乳制品"
  ],
  "difficulty": 1,
  "time_cost": 10,
  "cover_image": "images/a10cf0e285c91e25c59abd1ad07bc350.webp",
  "nutrition_tip": "带孩子们到厨房！这些奶油酸奶棒有 3 种简单的成分……",
  "ingredients": [
    {
      "name": "酸奶（香草，低脂）",
      "amount": "2 杯"
    },
    {
      "name": "浆果（新鲜或冷冻，使用您最喜欢的或品种；无需解冻冷冻浆果）",
      "amount": "1 杯"
    },
    {
      "name": "椒盐卷饼棒（减半；或 6 块烘焙零食棒饼干）",
      "amount": "3"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "将椒盐卷饼棒折成两半。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "在一个大碗中，轻轻搅拌酸奶和浆果。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "用勺子舀入 4 盎司冰棒模具或 3 盎司纸杯中。"
    },
    {
      "step_index": 4,
      "img": "",
      "text": "用箔纸盖住模具或杯子。"
    },
    {
      "step_index": 5,
      "img": "",
      "text": "使用锋利的刀（成人应该这样做！）在箔片上切一个小孔。"
    },
    {
      "step_index": 6,
      "img": "",
      "text": "插入椒盐卷饼棒或零食棒的切面。"
    },
    {
      "step_index": 7,
      "img": "",
      "text": "冷冻直至变硬（大约 4 小时）。"
    },
    {
      "step_index": 8,
      "img": "",
      "text": "食用前取出箔纸和模具或杯子。"
    }
  ],
