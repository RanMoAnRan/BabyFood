  "nutrition_tip": "大蕉的天然甜味增强了波多黎各的风味......",
  "ingredients": [
    {
      "name": "碎牛肉（瘦肉）",
      "amount": "1 1 / 2 磅"
    },
    {
      "name": "甜椒（绿色，无籽，切碎）",
      "amount": "2 个中等"
    },
    {
      "name": "洋葱（黄色，切碎）",
      "amount": "1 个中等"
    },
    {
      "name": "月桂叶",
      "amount": "3"
    },
    {
      "name": "香菜（切碎）",
      "amount": "1 / 4 杯"
    },
    {
      "name": "牛肉汤（低钠）",
      "amount": "1 杯"
    },
    {
      "name": "ajicitos（小甜椒）",
      "amount": "5"
    },
    {
      "name": "胭脂树膏 (achiote)",
      "amount": "1 / 2 汤匙"
    },
    {
      "name": "大蒜（切碎）",
      "amount": "2 丁香"
    },
    {
      "name": "番茄酱",
      "amount": "1 杯"
    },
    {
