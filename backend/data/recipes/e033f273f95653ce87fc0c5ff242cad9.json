  "title": "Tomato and Tomatillo Gazpacho",
  "min_age_month": 8,
  "tags": [
    "正餐",
    "蔬菜"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/05fd8b8bb5cbea01a9afe706016ac275.webp",
  "nutrition_tip": "Light and refreshing cool summer soup.",
  "ingredients": [
    {
      "name": "tomatillos (fresh, husked, rinsed, and quartered)",
      "amount": "1 / 2 pound"
    },
    {
      "name": "tomatoes (chopped, dividied)",
      "amount": "1 1 / 2 pounds"
    },
    {
      "name": "onion (white, divided)",
      "amount": "1 / 2 cup"
    },
    {
      "name": "pepper (hot such as jalapeno, chopped, including seeds)",
      "amount": "1 medium"
    },
    {
      "name": "garlic (quartered)",
      "amount": "1 clove"
    },
    {
      "name": "red wine vinegar",
      "amount": "2 tablespoons"
    },
    {
      "name": "olive oil",
      "amount": "2 tablespoons"
    },
    {
      "name": "cilantro (chopped)",
      "amount": "1 / 2 cup"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "Puree tomatillos, half of tomatoes, and half of onion with hot pepper, garlic, vinegar, and 1 ¼ teaspoons salt in a blender until smooth."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Force through a medium-mesh sieve into a bowl, discarding solids."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Stir in remaining tomatoes and onion, water, oil, and cilantro."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Chill until cold, at least 1 hour and up to 4 hours."
    }
  ],
