{
  "id": "e033f273f95653ce87fc0c5ff242cad9",
  "title": "番茄酸浆冷汤",
  "min_age_month": 8,
  "tags": [
    "午餐",
    "晚餐",
    "蔬菜"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/05fd8b8bb5cbea01a9afe706016ac275.webp",
  "nutrition_tip": "清淡爽口的夏日清凉汤。",
  "ingredients": [
    {
      "name": "粘浆果（新鲜、去壳、冲洗并切成四等分）",
      "amount": "1 / 2 磅"
    },
    {
      "name": "西红柿（切碎，分次）",
      "amount": "1 1 / 2 磅"
    },
    {
      "name": "洋葱（白色，分开）",
      "amount": "1 / 2 杯"
    },
    {
      "name": "辣椒（辣椒等辣味，切碎，包括种子）",
      "amount": "1 个中等"
    },
    {
      "name": "大蒜（切成四份）",
      "amount": "1 丁香"
    },
    {
      "name": "红酒醋",
      "amount": "2 汤匙"
    },
    {
      "name": "橄榄油",
      "amount": "2 汤匙"
    },
    {
      "name": "香菜（切碎）",
      "amount": "1 / 2 杯"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "将粘浆果、一半西红柿、一半洋葱、辣椒、大蒜、醋和 1 ¼ 茶匙盐放入搅拌机中打成泥，直至变得光滑。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "用力通过中目筛进入碗中，丢弃固体。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "加入剩余的西红柿和洋葱、水、油和香菜。"
    },
    {
      "step_index": 4,
      "img": "",
      "text": "冷却至冷，至少 1 小时，最多 4 小时。"
    }
  ],
