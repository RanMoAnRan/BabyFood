    },
    {
      "name": "bell pepper (green, red, yellow, or orange)",
      "amount": "4 medium"
    },
    {
      "name": "onion (chopped)",
      "amount": "1 / 2 cup"
    },
    {
      "name": "chickpeas (garbanzo banes, drained and rinsed)",
      "amount": "1 / 2 can"
    },
    {
      "name": "cheese (reduced fat, divided)",
      "amount": "1 cup"
    },
    {
      "name": "tomatoes (chopped)",
      "amount": "2 medium"
    },
    {
      "name": "green chiles (drained)",
      "amount": "4 ounces"
    },
    {
      "name": "garlic (minced)",
      "amount": "1 clove"
    },
    {
      "name": "chili powder",
      "amount": "1 / 2 teaspoon"
    },
    {
      "name": "cilantro (fresh or 4 teaspoons dried)",
      "amount": "4 tablespoons"
