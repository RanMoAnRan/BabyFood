  "title": "Refried Beans",
  "min_age_month": 12,
  "tags": [
    "正餐",
    "蛋白质"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/4a721e2bb5d429db67a1f5ee63f324c6.webp",
  "nutrition_tip": "These refried beans are an easy, homemade alternative to canned beans.",
  "ingredients": [
    {
      "name": "pinto beans (dried)",
      "amount": "2 cups"
    },
    {
      "name": "water",
      "amount": "6 cups"
    },
    {
      "name": "onion (chopped)",
      "amount": "1 cup"
    },
    {
      "name": "garlic powder",
      "amount": "1 teaspoon"
    },
    {
      "name": "olive oil",
      "amount": "1 teaspoon"
    },
    {
      "name": "liquid from cooked beans",
      "amount": "1 cup"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "Clean the beans. Leave them to soak overnight. Drain."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "In a medium pan, put soaked beans, water, onion, garlic powder and olive oil."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Cook over medium heat for 2½ hours or until beans are tender."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Mash 3 cups of cooked beans in large heavy skillet."
    },
    {
      "step_index": 5,
      "img": "",
      "text": "Add 1 cup bean cooking liquid. Cook over medium heat until thick and the desired consistency."
    }
  ],
