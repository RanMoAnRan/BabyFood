  "title": "西兰花土豆汤",
  "min_age_month": 8,
  "tags": [
    "正餐",
    "蔬菜",
    "乳制品"
  ],
  "difficulty": 1,
  "time_cost": 5,
  "cover_image": "images/a305e0f569ed1b51c894f92648e35df8.webp",
  "nutrition_tip": "在寒冷的日子里做西兰花土豆汤来温暖自己。",
  "ingredients": [
    {
      "name": "西兰花（冷冻，切碎）",
      "amount": "40 盎司"
    },
    {
      "name": "水",
      "amount": "4 杯"
    },
    {
      "name": "洋葱（切碎）",
      "amount": "1"
    },
    {
      "name": "鸡汤块（低钠）",
      "amount": "4"
    },
    {
      "name": "淡奶（脱脂）",
      "amount": "2 杯"
    },
    {
      "name": "马铃薯片",
      "amount": "1 杯"
    },
    {
      "name": "切达干酪（切丝，低脂）",
      "amount": "4汤匙"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "将西兰花、水、洋葱和肉汤块放入汤锅中混合。煮沸并减少热量。盖上锅盖，小火煮约 10 分钟，直至蔬菜变软。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "加入牛奶并慢慢拌入土豆片。煮，不断搅拌，直至变稠。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "上面撒上奶酪即可食用。"
    }
  ],
