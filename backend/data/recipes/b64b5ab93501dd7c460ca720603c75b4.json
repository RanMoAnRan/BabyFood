{
  "id": "b64b5ab93501dd7c460ca720603c75b4",
  "title": "'Leftovers' Broccoli Potato Soup",
  "min_age_month": 6,
  "tags": [
    "正餐",
    "蔬菜",
    "乳制品"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/3677b99eca3677915bae11c6815f5d05.webp",
  "nutrition_tip": "A tasty and made-from-scratch soup that comes together quickly with the help of…",
  "ingredients": [
    {
      "name": "broccoli (chopped)",
      "amount": "4 cups"
    },
    {
      "name": "onion (chopped)",
      "amount": "1 small"
    },
    {
      "name": "broth (chicken or vegetable broth, low-sodium)",
      "amount": "4 cups"
    },
    {
      "name": "evaporated milk (non-fat)",
      "amount": "1 cup"
    },
    {
      "name": "potatoes (mashed, leftover or 1/2 cup mashed potatoes, instant &amp; prepare with water to make 1 cup potatoes)",
      "amount": "1 cup"
    },
    {
      "name": "cheddar cheese (shredded)",
      "amount": "1 / 4 cup"
    },
    {
      "name": "salt (to taste)",
      "amount": ""
    },
    {
      "name": "black pepper (to taste)",
      "amount": ""
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "Combine broccoli, onion, and broth in large sauce pan."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Bring to a boil."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Reduce heat. Cover and simmer about 10 minutes or until vegetables are tender."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Add milk to soup. Slowly stir in mashed potatoes."
    },
    {
      "step_index": 5,
      "img": "",
      "text": "Cook, stirring constantly, until bubbly and thickened."
    },
    {
      "step_index": 6,
      "img": "",
      "text": "Season with salt and pepper; stir in a little more milk or water if soup starts to become too thick."
    },
    {
      "step_index": 7,
      "img": "",
      "text": "Ladle into serving bowls."
    },
    {
      "step_index": 8,
      "img": "",
      "text": "Sprinkle about 1 tablespoon cheese over each serving."
    }
  ],
