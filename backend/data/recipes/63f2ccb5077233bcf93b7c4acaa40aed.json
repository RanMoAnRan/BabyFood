  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "Chop mushrooms to approximate size and texture of cooked ground beef."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Heat a sauté pan over medium-high heat."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Add ground beef and mushrooms, and cook."
    },
    {
      "step_index": 4,
      "img": "",
