{
  "id": "0aa954d2dda49b0dcd1e3a8da207aa0d",
  "title": "咸味燕麦粥",
  "min_age_month": 8,
  "tags": [
    "早餐",
    "谷物"
  ],
  "difficulty": 1,
  "time_cost": 15,
  "cover_image": "images/79bd81b8c64400ba1834616283e51a85.webp",
  "nutrition_tip": "用这个用ch…制成的美味燕麦片食谱来改变你早上的燕麦碗……",
  "ingredients": [
    {
      "name": "牛奶（脱脂或 1%）",
      "amount": "1 / 2 杯"
    },
    {
      "name": "蔬菜汤（低钠）",
      "amount": "1 1 / 2 杯"
    },
    {
      "name": "燕麦（钢切）",
      "amount": "1 / 2 杯"
    },
    {
      "name": "切达干酪（低脂，切丝）",
      "amount": "1 / 3 杯"
    },
    {
      "name": "葱（切丁）",
      "amount": "1 / 4 杯"
    },
    {
      "name": "西红柿（切丁）",
      "amount": "1 / 2 杯"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "将牛奶和肉汤放入中型平底锅中，用高温混合。加热直至混合物开始沸腾。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "拌入燕麦并小火慢炖。煮 25 至 30 分钟，偶尔搅拌，直至液体被吸收。燕麦应该嫩并煮熟。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "拌入奶酪和葱。上面放上西红柿。"
    },
    {
      "step_index": 4,
      "img": "",
      "text": "在 2 小时内将剩菜冷藏。"
    }
  ],
