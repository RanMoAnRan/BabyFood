{
  "id": "5db916bc62c930b00ac83f1210276060",
  "title": "咸味肉丸松饼",
  "min_age_month": 6,
  "tags": [
    "晚餐",
    "蛋白质",
    "乳制品",
    "谷物"
  ],
  "difficulty": 1,
  "time_cost": 10,
  "cover_image": "images/d731556ea6d22a28631b9b9b433c17b3.webp",
  "nutrition_tip": "这些适合儿童的肉饼松饼味道浓郁，口感优美……",
  "ingredients": [
    {
      "name": "蛋",
      "amount": "1 个大"
    },
    {
      "name": "牛奶（脱脂）",
      "amount": "1 / 2 杯"
    },
    {
      "name": "碎牛肉（瘦肉）",
      "amount": "1 磅"
    },
    {
      "name": "洋葱（切碎）",
      "amount": "3 汤匙"
    },
    {
      "name": "盐",
      "amount": "1 / 2 茶匙"
    },
    {
      "name": "奶酪（任何品种，磨碎）",
      "amount": "1 / 2 杯"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "将烤箱预热至 350 °F。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "将所有成分混合并搅拌均匀。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "用勺子舀出混合物，均匀地分入 12 个涂有油脂的松饼杯中。"
    },
    {
      "step_index": 4,
      "img": "",
      "text": "烘烤 1 小时，或直至肉饼中心温度达到 160 °F。"
    },
    {
      "step_index": 5,
      "img": "",
      "text": "稍微冷却后再从松饼杯中取出。"
    }
  ],
