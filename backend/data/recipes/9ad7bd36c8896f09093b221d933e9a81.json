  "cover_image": "images/1f36a02e7c2293d7761519eeaa551615.webp",
  "nutrition_tip": "Enjoy a breakfast full of fruits and vegetables with this breakfast smoothie.&nb…",
  "ingredients": [
    {
      "name": "avocados (ripe)",
      "amount": "1 large"
    },
    {
      "name": "honeydew melon (chunks (about 1 slice))",
      "amount": "1 cup"
    },
    {
      "name": "lime juice",
      "amount": "1 1 / 2 teaspoons"
    },
    {
      "name": "milk (fat free)",
      "amount": "1 cup"
    },
    {
      "name": "yogurt (fat-free, plain)",
      "amount": "1 cup"
    },
    {
      "name": "apple juice (100% juice)",
      "amount": "1 / 2 cup"
    },
    {
      "name": "honey",
      "amount": "1 tablespoon"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "Cut avocado in half, remove pit."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Scoop out flesh, place in blender."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Add remaining ingredients; blend well."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Serve cold. (Keeps well in refrigerator up to 24 hours. If made ahead, stir gently before pouring into glasses.)"
    }
  ],
