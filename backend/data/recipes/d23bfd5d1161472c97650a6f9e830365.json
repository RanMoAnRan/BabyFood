  "title": "Easy-As-A-Mix Pizza",
  "min_age_month": 12,
  "tags": [
    "正餐",
    "蔬菜",
    "乳制品"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/18a48b7f6c73cb8a4d154d5f5b07c297.webp",
  "nutrition_tip": "Making pizza at home has never been easier! Add veggie sticks and fruit for dess…",
  "ingredients": [
    {
      "name": "flour",
      "amount": "4 cups"
    },
    {
      "name": "rolled oats",
      "amount": "4 cups"
    },
    {
      "name": "nonfat dry milk",
      "amount": "1 cup"
    },
    {
      "name": "baking powder",
      "amount": "4 teaspoons"
    },
    {
      "name": "salt",
      "amount": "1 teaspoon"
    },
    {
      "name": "Better Baking Mix",
      "amount": "1"
    },
    {
      "name": "vegetable oil",
      "amount": "2 tablespoons"
    },
    {
      "name": "water",
      "amount": "1 / 3 cup"
    },
    {
      "name": "tomato sauce",
      "amount": ""
    },
    {
      "name": "onion (finely chopped)",
      "amount": "2 tablespoons"
    },
    {
      "name": "oregano (or Italian herb blend)",
      "amount": ""
    },
    {
      "name": "mozzarella cheese (part-skim, grated)",
      "amount": "1 can"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "In a large mixing bowl, stir all ingredients until well mixed."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Store in a closed, covered can or rigid plastic container, or sealed heavy plastic bag."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Label and date the container. Use within 6 months."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Stir lightly before use in recipes."
    },
    {
      "step_index": 5,
      "img": "",
      "text": "Preheat oven to 425°F. Grease a 12 x 15 inch or larger baking sheet, or 12-inch pizza pan."
    },
    {
      "step_index": 6,
      "img": "",
      "text": "Measure mix into a bowl. Add oil and water. Stir to form soft dough."
    },
    {
      "step_index": 7,
      "img": "",
      "text": "Transfer dough onto baking sheet. Sprinkle with flour. Dip fingers in flour and pat dough into a circle about 11-12 inches across."
    },
    {
      "step_index": 8,
      "img": "",
      "text": "Spread pizza crust with tomato sauce. Leave about 1/2 inch around edge with no sauce."
    },
    {
      "step_index": 9,
      "img": "",
      "text": "Sprinkle with onion, seasoning and cheese"
    },
    {
      "step_index": 10,
      "img": "",
      "text": "Bake 10-12 minutes until edges are brown and cheese is melted and starting to brown."
    },
    {
      "step_index": 11,
      "img": "",
      "text": "Refrigerate any leftovers within 2 hours."
    }
  ],
