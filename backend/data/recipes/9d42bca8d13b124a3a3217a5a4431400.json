{
  "id": "9d42bca8d13b124a3a3217a5a4431400",
  "title": "苹果酱法式吐司",
  "min_age_month": 12,
  "tags": [
    "早餐",
    "谷物"
  ],
  "difficulty": 1,
  "time_cost": 5,
  "cover_image": "images/ba443397204f27beec67f2c5d9370eba.webp",
  "nutrition_tip": "用剩下的面包制作这款适合儿童的苹果酱法式吐司。",
  "ingredients": [
    {
      "name": "鸡蛋",
      "amount": "2"
    },
    {
      "name": "牛奶（脱脂或 1%）",
      "amount": "1 / 2 杯"
    },
    {
      "name": "糖（白）",
      "amount": "2 茶匙"
    },
    {
      "name": "香草",
      "amount": "1 / 2 茶匙"
    },
    {
      "name": "苹果酱（不加糖）",
      "amount": "1 / 4 杯"
    },
    {
      "name": "全麦面包",
      "amount": "6 片"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "在一个大搅拌碗中，混合鸡蛋、牛奶、肉桂、糖、香草和苹果酱。搅拌均匀。"
    },
    {
      "step_index": 2,
      "img": "",
      "text": "一次一片浸泡面包，直至混合物稍微被吸收。"
    },
    {
      "step_index": 3,
      "img": "",
      "text": "在煎锅或煎锅上轻轻喷洒或涂油。用中火煮至两面金黄。"
    },
    {
      "step_index": 4,
      "img": "",
      "text": "趁热享用。"
    },
    {
      "step_index": 5,
      "img": "",
      "text": "在 2 小时内将剩菜冷藏。"
    }
  ],
