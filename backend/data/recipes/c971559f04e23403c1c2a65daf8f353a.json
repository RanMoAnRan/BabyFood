  "title": "Lentil Soup",
  "min_age_month": 8,
  "tags": [
    "正餐",
    "蔬菜",
    "蛋白质"
  ],
  "difficulty": 1,
  "time_cost": 0,
  "cover_image": "images/09ebdcd1571189b576d560f17f352144.webp",
  "nutrition_tip": "This vegetarian soup is perfect for a cool fall or winter day.",
  "ingredients": [
    {
      "name": "olive oil",
      "amount": "2 tablespoons"
    },
    {
      "name": "carrots (diced)",
      "amount": "2 medium"
    },
    {
      "name": "celery (stalks, chopped)",
      "amount": "2 medium"
    },
    {
      "name": "onion (yellow, chopped)",
      "amount": "1 small"
    },
    {
      "name": "garlic (minced)",
      "amount": "2 cloves"
    },
    {
      "name": "oregano (dried)",
      "amount": "1 teaspoon"
    },
    {
      "name": "basil (dried)",
      "amount": "1 teaspoon"
    },
    {
      "name": "black pepper (ground)",
      "amount": "1 / 2 teaspoon"
    },
    {
      "name": "lentils (dry)",
      "amount": "2 cups"
    },
    {
      "name": "tomatoes (crushed, 14.5 ounces)",
      "amount": "1 can"
    },
    {
      "name": "vegetable broth",
      "amount": "2 cups"
    },
    {
      "name": "water",
      "amount": "6 1 / 2 cups"
    }
  ],
  "steps": [
    {
      "step_index": 1,
      "img": "",
      "text": "In a large soup pot, heat oil over medium heat. Add carrots, celery, and onions; cook and stir until the onion is tender."
    },
    {
      "step_index": 2,
      "img": "",
      "text": "Stir in garlic, oregano, basil, and pepper. Cook for 2 minutes."
    },
    {
      "step_index": 3,
      "img": "",
      "text": "Stir in lentils and tomatoes, then add the vegetable broth and water. Cover and bring to a boil. Reduce heat and simmer for at least 1 hour or until lentils are tender."
    },
    {
      "step_index": 4,
      "img": "",
      "text": "Store leftovers in the refrigerator and reheat on the stove or in the microwave. The soup will taste better the next day!"
    }
  ],
