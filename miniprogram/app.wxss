page {
  background: #FDFBF7;
  color: #334155;
  font-size: 30rpx;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica,
    Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB",
    "Microsoft Yahei", sans-serif;
  line-height: 1.6;
}

view,
scroll-view,
swiper,
button {
  box-sizing: border-box;
}

.container {
  padding: 24rpx;
}

.safe-bottom {
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.safe-tabbar {
  padding-bottom: calc(24rpx + 120rpx + env(safe-area-inset-bottom));
}

.safe-toolbar {
  padding-bottom: calc(24rpx + 160rpx + env(safe-area-inset-bottom));
}

.card {
  background: #ffffff;
  border-radius: 28rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 14rpx 40rpx rgba(15, 23, 42, 0.06);
  overflow: hidden;
  transition: transform 0.15s ease, opacity 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
}

.card-hover {
  opacity: 0.96;
  transform: translateY(2rpx);
  border-color: rgba(249, 115, 22, 0.28);
  box-shadow: 0 18rpx 48rpx rgba(15, 23, 42, 0.1);
}

.title {
  color: #0F172A;
  font-weight: 700;
}

.muted {
  color: #64748B;
  font-size: 26rpx;
}

.btn {
  background: linear-gradient(135deg, #FDBA74 0%, #F97316 100%);
  border-radius: 999rpx;
  padding: 20rpx 40rpx;
  font-weight: 700;
  color: #ffffff;
  font-size: 30rpx;
  box-shadow: 0 10rpx 24rpx rgba(249, 115, 22, 0.28);
  border: none;
}

.btn::after {
  border: none;
}

.btn-ghost {
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(15, 23, 42, 0.1);
  color: #334155;
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  font-weight: 700;
  font-size: 28rpx;
}

.btn-ghost::after {
  border: none;
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: #DCFCE7;
  color: #166534;
  font-size: 24rpx;
  font-weight: 700;
}

.danger {
  color: #EF4444;
  font-weight: 800;
}
