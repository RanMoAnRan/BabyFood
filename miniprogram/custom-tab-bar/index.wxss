.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 24rpx calc(12rpx + env(safe-area-inset-bottom));
  background: transparent;
}

.tabbar-inner {
  height: 112rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 36rpx;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 18rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bubble {
  width: 84rpx;
  height: 56rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.bubble-active {
  background: rgba(255, 213, 128, 0.6);
}

.label {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #8A8A8A;
  font-weight: 700;
}

.label-active {
  color: #F9A825;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  position: relative;
}

/* Home icon */
.icon-home .home-roof {
  position: absolute;
  left: 6rpx;
  top: 4rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #444;
}

.icon-home .home-body {
  position: absolute;
  left: 8rpx;
  top: 16rpx;
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid #444;
  border-top: 0;
  border-radius: 4rpx;
}

/* User icon */
.icon-user .user-head {
  position: absolute;
  left: 10rpx;
  top: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 3rpx solid #444;
}

.icon-user .user-body {
  position: absolute;
  left: 7rpx;
  top: 22rpx;
  width: 22rpx;
  height: 12rpx;
  border: 3rpx solid #444;
  border-top: 0;
  border-radius: 0 0 999rpx 999rpx;
}

