.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.98);
  border-top: 1rpx solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 -12rpx 28rpx rgba(15, 23, 42, 0.08);
  z-index: 1000;
}

.tabbar-inner {
  height: 104rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 104rpx;
  padding-top: 8rpx;
  padding-bottom: 6rpx;
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.tab-item-hover {
  transform: translateY(1rpx);
  opacity: 0.92;
}

.label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 600;
}

.tab-item-active {
  opacity: 1;
}

.tab-item-active .label {
  color: #F97316;
  font-weight: 700;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}


