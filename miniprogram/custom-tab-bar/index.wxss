.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.98);
  border-top: 1rpx solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 -12rpx 28rpx rgba(15, 23, 42, 0.08);
  z-index: 1000;
}

.tabbar-inner {
  height: 104rpx;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 104rpx;
  padding-top: 8rpx;
  padding-bottom: 6rpx;
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.tab-item-hover {
  transform: translateY(1rpx);
  opacity: 0.92;
}

.label {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 600;
}

.tab-item-active {
  opacity: 1;
}

.tab-item-active .label {
  color: #F97316;
  font-weight: 700;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  position: relative;
}

/* Home icon */
.icon-home .home-roof {
  position: absolute;
  left: 8rpx;
  top: 6rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #94A3B8;
}

.icon-home .home-body {
  position: absolute;
  left: 10rpx;
  top: 18rpx;
  width: 20rpx;
  height: 16rpx;
  border: 3rpx solid #94A3B8;
  border-top: 0;
  border-radius: 4rpx;
}

/* User icon */
.icon-user .user-head {
  position: absolute;
  left: 12rpx;
  top: 6rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 3rpx solid #94A3B8;
}

.icon-user .user-body {
  position: absolute;
  left: 9rpx;
  top: 24rpx;
  width: 22rpx;
  height: 12rpx;
  border: 3rpx solid #94A3B8;
  border-top: 0;
  border-radius: 0 0 999rpx 999rpx;
}

.tab-item-active .icon-home .home-body {
  border: 3rpx solid #F97316;
  border-top: 0;
}

.tab-item-active .icon-user .user-head {
  border: 3rpx solid #F97316;
}

.tab-item-active .icon-user .user-body {
  border: 3rpx solid #F97316;
  border-top: 0;
}

.tab-item-active .icon-home .home-roof {
  border-bottom: 12rpx solid #F97316;
}
