<cover-view class="tabbar">
  <cover-view class="tabbar-inner">
    <cover-view
      class="tab-item"
      data-index="0"
      bindtap="onTap"
    >
      <cover-view class="bubble {{selected === 0 ? 'bubble-active' : ''}}">
        <cover-view class="icon icon-home">
          <cover-view class="home-roof"></cover-view>
          <cover-view class="home-body"></cover-view>
        </cover-view>
      </cover-view>
      <cover-view class="label {{selected === 0 ? 'label-active' : ''}}">首页</cover-view>
    </cover-view>

    <cover-view
      class="tab-item"
      data-index="1"
      bindtap="onTap"
    >
      <cover-view class="bubble {{selected === 1 ? 'bubble-active' : ''}}">
        <cover-view class="icon icon-user">
          <cover-view class="user-head"></cover-view>
          <cover-view class="user-body"></cover-view>
        </cover-view>
      </cover-view>
      <cover-view class="label {{selected === 1 ? 'label-active' : ''}}">我的</cover-view>
    </cover-view>
  </cover-view>
</cover-view>

