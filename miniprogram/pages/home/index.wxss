.searchbar {
  padding: 18rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.search-icon {
  flex: 0 0 auto;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #0F172A;
}

.search-placeholder {
  color: #94A3B8;
}

.profile {
  margin-top: 18rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(253, 186, 116, 0.26) 0%, rgba(249, 115, 22, 0.08) 100%);
  border-color: rgba(249, 115, 22, 0.16);
}

.profile-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.small-btn {
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  background: rgba(255, 255, 255, 0.96);
  border-color: rgba(249, 115, 22, 0.28);
  color: #F97316;
}

.section {
  margin-top: 40rpx;
  padding: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #0F172A;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title-left {
  display: flex;
  align-items: center;
  min-width: 0;
}

.section-accent {
  width: 8rpx;
  height: 32rpx;
  background: #F97316;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.section-title-text {
  min-width: 0;
}

.section-link {
  font-size: 28rpx;
  font-weight: 700;
  color: #F97316;
}

.nav-scroll {
  width: 100%;
}

.nav-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.nav-row {
  display: flex;
  gap: 16rpx;
  padding: 4rpx 2rpx;
}

.nav-pill {
  flex: 0 0 auto;
  padding: 18rpx 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.96);
  color: #334155;
  border: 2rpx solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 12rpx 26rpx rgba(15, 23, 42, 0.06);
  transition: transform 0.15s ease, opacity 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
}

/* Subtle colors like common food/parenting apps */
.nav-pill:not(.nav-pill-active):nth-child(1) { background: rgba(59, 130, 246, 0.12); color: #1D4ED8; border-color: rgba(29, 78, 216, 0.18); }
.nav-pill:not(.nav-pill-active):nth-child(2) { background: rgba(16, 185, 129, 0.14); color: #047857; border-color: rgba(4, 120, 87, 0.18); }
.nav-pill:not(.nav-pill-active):nth-child(3) { background: rgba(249, 115, 22, 0.14); color: #C2410C; border-color: rgba(194, 65, 12, 0.18); }
.nav-pill:not(.nav-pill-active):nth-child(4) { background: rgba(168, 85, 247, 0.14); color: #7E22CE; border-color: rgba(126, 34, 206, 0.18); }
.nav-pill:not(.nav-pill-active):nth-child(5) { background: rgba(244, 63, 94, 0.12); color: #BE123C; border-color: rgba(190, 18, 60, 0.16); }

.nav-pill-active {
  background: linear-gradient(135deg, #FDBA74 0%, #F97316 100%);
  color: #ffffff;
  border-color: transparent;
  box-shadow: 0 16rpx 34rpx rgba(249, 115, 22, 0.25);
}

.nav-pill-hover {
  transform: translateY(2rpx);
  opacity: 0.92;
}

.reco-card {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  overflow: hidden;
}

.reco-img {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  flex-shrink: 0;
}

.reco-body {
  padding: 16rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reco-title {
  font-size: 32rpx;
  line-height: 1.25;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.reco-chips {
  margin-top: 8rpx;
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.reco-chip {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.04);
  color: #555;
}

.reco-meta {
  margin-top: 10rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex-wrap: wrap;
}
