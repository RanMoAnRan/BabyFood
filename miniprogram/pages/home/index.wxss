.search {
  padding: 24rpx;
  background: transparent;
  box-shadow: none; /* Remove card shadow from search container */
}

.search-input {
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  color: #333;
}

.profile {
  margin: 0 24rpx;
  padding: 32rpx;
  background: linear-gradient(120deg, #FFF8E1 0%, #FFFFFF 100%);
  border: 2rpx solid #FFF0C2;
}

.profile-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.small-btn {
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  background: #fff;
  border-color: #FFD580;
  color: #F9A825;
}

.section {
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #444;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title-left {
  display: flex;
  align-items: center;
  min-width: 0;
}

.section-accent {
  width: 8rpx;
  height: 32rpx;
  background: #FFD580;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.section-title-text {
  min-width: 0;
}

.section-link {
  font-size: 28rpx;
  font-weight: 700;
  color: #F9A825;
}

.nav-scroll {
  width: 100%;
}

.nav-row {
  display: flex;
  gap: 16rpx;
  padding: 4rpx 2rpx;
}

.nav-pill {
  flex: 0 0 auto;
  padding: 18rpx 24rpx;
  font-size: 26rpx;
  font-weight: 700;
  border-radius: 999rpx;
  background: #ffffff;
  color: #555;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 6rpx 14rpx rgba(239, 214, 172, 0.12);
  transition: transform 0.15s ease, opacity 0.15s ease;
}

/* Subtle colors like common food/parenting apps */
.nav-pill:not(.nav-pill-active):nth-child(1) { background: #E3F2FD; color: #1565C0; border-color: rgba(21, 101, 192, 0.12); }
.nav-pill:not(.nav-pill-active):nth-child(2) { background: #E8F5E9; color: #2E7D32; border-color: rgba(46, 125, 50, 0.12); }
.nav-pill:not(.nav-pill-active):nth-child(3) { background: #FFF3E0; color: #EF6C00; border-color: rgba(239, 108, 0, 0.14); }
.nav-pill:not(.nav-pill-active):nth-child(4) { background: #F3E5F5; color: #7B1FA2; border-color: rgba(123, 31, 162, 0.12); }
.nav-pill:not(.nav-pill-active):nth-child(5) { background: #FFEBEE; color: #C62828; border-color: rgba(198, 40, 40, 0.12); }

.nav-pill-active {
  background: linear-gradient(135deg, #FFD580 0%, #FFC145 100%);
  color: #5A3E00;
  border-color: transparent;
  box-shadow: 0 10rpx 22rpx rgba(255, 193, 69, 0.26);
}

.nav-pill-hover {
  transform: scale(0.97);
  opacity: 0.9;
}

.reco-card {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  overflow: hidden;
}

.reco-hover {
  transform: scale(0.99);
  opacity: 0.95;
}

.reco-img {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  flex-shrink: 0;
}

.reco-body {
  padding: 16rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reco-title {
  font-size: 32rpx;
  line-height: 1.25;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.reco-chips {
  margin-top: 8rpx;
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.reco-chip {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.04);
  color: #555;
}

.reco-meta {
  margin-top: 10rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex-wrap: wrap;
}
