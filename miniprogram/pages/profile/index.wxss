.block {
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.fav-section {
  margin-bottom: 24rpx;
}

.block-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.block-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 32rpx;
  background: #FFD580;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #eee;
}

.row:last-child {
  border-bottom: none;
}

.picker {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  background: #F5F5F5;
  color: #333;
  font-weight: 500;
}

.reco-card {
  margin-top: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  overflow: hidden;
}

.reco-hover {
  transform: scale(0.99);
  opacity: 0.95;
}

.reco-img {
  width: 200rpx;
  height: 200rpx;
  background: rgba(0, 0, 0, 0.04);
  flex-shrink: 0;
}

.reco-body {
  padding: 16rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reco-title {
  font-size: 32rpx;
  line-height: 1.25;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.reco-chips {
  margin-top: 8rpx;
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.reco-chip {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.04);
  color: #555;
}

.reco-bottom {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.reco-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-wrap: wrap;
}

.reco-del {
  font-size: 24rpx;
  padding: 10rpx 18rpx;
  line-height: 1.2;
  border-radius: 999rpx;
  color: #E57373;
  border-color: rgba(229, 115, 115, 0.45);
}

.btn-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.note {
  margin-top: 16rpx;
  font-size: 24rpx;
}
