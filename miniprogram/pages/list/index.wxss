.filters {
  position: sticky;
  top: 12rpx;
  z-index: 10;
  padding: 18rpx;
  background: rgba(255, 255, 255, 0.92);
}

.filters-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.filters-search {
  flex: 1;
  height: 84rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  gap: 14rpx;
  background: rgba(15, 23, 42, 0.04);
  border: 2rpx solid rgba(15, 23, 42, 0.06);
}

.search-icon {
  flex: 0 0 auto;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 64rpx;
  color: #0F172A;
}

.search-placeholder {
  color: #94A3B8;
}

.small-btn {
  font-size: 26rpx;
  padding: 12rpx 22rpx;
}

.chips {
  white-space: nowrap;
  margin-top: 20rpx;
  padding-bottom: 4rpx;
}

.chips::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  padding: 12rpx 26rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.04);
  color: #334155;
  font-size: 26rpx;
  font-weight: 700;
  transition: transform 0.15s ease, opacity 0.15s ease, background 0.15s ease;
  border: 2rpx solid rgba(15, 23, 42, 0.06);
}

.chip-active {
  background: linear-gradient(135deg, #FDBA74 0%, #F97316 100%);
  color: #ffffff;
  border-color: transparent;
}

.chip-hover {
  transform: translateY(2rpx);
  opacity: 0.92;
}

.meta {
  margin-top: 18rpx;
  padding: 0;
  font-size: 24rpx;
}

.grid {
  margin-top: 18rpx;
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  overflow: hidden;
  background: #fff;
}

.img {
  width: 100%;
  height: 260rpx;
  background: #f0f0f0;
}

.body {
  padding: 20rpx;
}

.title {
  font-size: 28rpx;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.row {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.empty {
  margin-top: 100rpx;
  text-align: center;
}

.load {
  margin-top: 24rpx;
  padding-bottom: 40rpx;
  text-align: center;
}
