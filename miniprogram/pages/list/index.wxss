.filters {
  padding: 24rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  border-radius: 0 0 32rpx 32rpx;
}

.filters-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  background: #F5F5F5;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  height: 72rpx;
}

.small-btn {
  font-size: 26rpx;
  padding: 14rpx 24rpx;
  border: none;
  background: #eee;
  color: #666;
  border-radius: 40rpx;
}

.chips {
  white-space: nowrap;
  margin-top: 20rpx;
  padding-bottom: 4rpx; /* Prevent scrollbar overlap visual */
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s;
  border: none;
}

.chip-active {
  background: #FFD580;
  color: #5A3E00;
  font-weight: 700;
}

.meta {
  margin-top: 24rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.grid {
  margin: 24rpx;
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  overflow: hidden;
  background: #fff;
}

.img {
  width: 100%;
  height: 280rpx;
  background: #f0f0f0;
}

.body {
  padding: 20rpx;
}

.title {
  font-size: 28rpx;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.row {
  margin-top: 12rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.empty {
  margin-top: 100rpx;
  text-align: center;
  color: #999;
}

.load {
  margin-top: 24rpx;
  padding-bottom: 40rpx;
  text-align: center;
  color: #999;
}
