.hero {
  height: 520rpx;
  background: #f0f0f0;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 44rpx 44rpx;
}

.hero-img {
  width: 100%;
  height: 520rpx;
}

.hero-shade {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 160rpx;
  background: linear-gradient(180deg, rgba(253, 251, 247, 0) 0%, rgba(253, 251, 247, 0.9) 70%, rgba(253, 251, 247, 1) 100%);
}

.h1 {
  font-size: 48rpx;
  font-weight: 800;
  color: #0F172A;
  margin-top: 18rpx;
}

.meta {
  margin-top: 16rpx;
  display: flex;
  gap: 20rpx;
  align-items: center;
  flex-wrap: wrap;
}

.warn {
  margin-top: 30rpx;
  padding: 24rpx;
  background: rgba(239, 68, 68, 0.08);
  border: 1rpx solid rgba(239, 68, 68, 0.16);
  box-shadow: none;
}

.warn-item {
  margin-top: 10rpx;
  color: #B91C1C;
  font-size: 28rpx;
}

.tip {
  margin-top: 30rpx;
  padding: 24rpx;
  background: rgba(249, 115, 22, 0.08);
  border: 1rpx solid rgba(249, 115, 22, 0.18);
  box-shadow: none;
}

.tip-title {
  font-weight: 700;
  color: #C2410C;
  font-size: 28rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tip-text {
  margin-top: 12rpx;
  color: #334155;
  font-size: 28rpx;
  line-height: 1.5;
}

.section-title {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 38rpx;
  font-weight: 800;
  color: #0F172A;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 32rpx;
  background: #F97316;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.ing {
  margin-top: 10rpx;
  padding: 0 24rpx; /* Use internal padding */
}

.ing-row {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx dashed #eee;
}

.ing-row:last-child {
  border-bottom: 0;
}

.ing-name {
  color: #333;
  font-weight: 600;
  font-size: 30rpx;
}

.steps {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step {
  padding: 28rpx;
}

.step-head {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 18rpx;
}

.step-badge {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 900;
  font-size: 28rpx;
  background: rgba(249, 115, 22, 0.14);
  color: #C2410C;
  border: 2rpx solid rgba(249, 115, 22, 0.18);
}

.step-head-text {
  font-size: 28rpx;
  font-weight: 800;
  color: #0F172A;
}

.step-img {
  margin-top: 20rpx;
  width: 100%;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.step-text {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #334155;
  line-height: 1.6;
}

.toolbar {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(20rpx + env(safe-area-inset-bottom));
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.96);
  border-radius: 999rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  box-shadow: 0 18rpx 50rpx rgba(15, 23, 42, 0.16);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.tool-btn {
  flex: 1;
  border-radius: 999rpx;
  padding: 24rpx 0;
  background: rgba(15, 23, 42, 0.04);
  border: none;
  color: #334155;
  font-weight: 700;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.tool-btn::after { border: none; }

.tool-active {
  background: rgba(249, 115, 22, 0.14);
  color: #C2410C;
}

.tool-share {
  background: rgba(16, 185, 129, 0.14);
  color: #047857;
}
